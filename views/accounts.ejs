<% layout( 'layout') -%>

<div class="row-fluid">
  <div class="col-sm-12">
    <div class="col-sm-4 col-sm-offset-1">
      <div class="well">
	<div class="page-header">
	  <h3>Account<small> list</small></h3>
	</div>
       
	<% ctx.accounts.forEach(function(acc, idx){ %>
	<p>
          <span>
            <a href="/accountedit/<%= acc.accid %>"><%= idx+1 %>. <%= acc.name %> </a>
          </span>
        </p>
	<% }); %>
        
      </div>
    </div><!-- end of well div -->
    <div class="col-sm-6">
      <div class="well">
	<div class="page-header">
	  <h3>Account<small> create</small></h3>
	</div>
	<form action="/accountcreate" method="post" accept-charset="utf-8" class="form-horizontal" role="form">
	  <div class="form-group">
	    <label class="control-label col-sm-2" for="id">Id</label>
	    <div class="col-sm-5">
	      <input type="text" name="id" class="form-control" placeholder="Account ID"/>
	    </div>
	  </div>
	  <div class="form-group">
	    <label class="control-label col-sm-2">Name</label>
	    <div class="col-sm-5">
	      <input type="text" name="name" class="form-control" placeholder="Unique account Name"/>
	    </div>
	  </div>
	  <div class="form-group">
	    <label class="control-label col-sm-2">SAP ID</label>
	    <div class="col-sm-5">
	      <input type="text" name="sapid" class="form-control" placeholder="SAP ID"/>
	    </div>
	  </div>
	  <div class="form-group">
	    <label class="control-label col-sm-2">Identifier</label>
	    <div class="col-sm-5">
	      <input type="text" name="identifier" class="form-control" placeholder="iden1;iden2;idenN"/>
	    </div>
	  </div>
	  <div class="form-group">
	    <label class="control-label col-sm-2">Ratesheet</label>
	    <div class="col-sm-5">
	      <select class="form-control" name="ratesheet">
		<option value="" selected >Ratesheet</option>
		<% ctx.ratesheets.forEach(function(rs){ %>
		<option value="<%= rs.name  %>"><%= rs.name  %></option> 
		<% }); %>
	      </select>
	    </div>
	  </div>
	  <div class="form-group">
	    <div class="col-sm-offset-2 col-sm-6">
	      <button type="submit" class="btn btn-default">Create</button>
	    </div>
	  </div>
	</form>
      </div><!-- well end -->
    </div>
  </div>
</div>

