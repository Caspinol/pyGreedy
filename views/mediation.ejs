<% layout( 'layout') -%>

<div class="row-fluid">
  <div class="col-md-12">
    <div class="col-md-offset-1 col-md-10">
      <div class="well-sm">
	<form action="/mediation_show/<%= perPage %>/<%= numPage %>" method="post" accept-charset="utf-8" class="form-inline" role="form">
	  <div class="form-group">
	    <label class="control-label col-md-offset-1 col-md-5" for="sdate">Start of billing</label>
	    <div class="col-md-6">
	      <input type="text" name="sdate" id="sdate" class="form-control" placeholder="YYYY-MM-DD"/>
	    </div>
	  </div>
	  <div class="form-group">
	    <label class="control-label col-md-offset-1 col-md-5" for="edate">End of billing</label>
	    <div class="col-md-6">
	      <input type="text" name="edate" id="edate" class="form-control" placeholder="YYYY-MM-DD"/>
	    </div>
	  </div>
	  <div class="form-group">
	    <div class="col-md-offset-5 col-md-3">
	      <button type="submit" class="btn btn-default">Show</button>
	    </div>
	  </div>
	</form>
      </div><!-- well div -->

      <div class="well-sm">
	<div class="page-header">
	  <h3> Calls </h3>
	</div>
      
	
	<table class="table">
	  <theader>
	    <tr>
	      <th>#</th>
	      <th>Date</th>
	      <th>Length</th>
	      <th>Calling</th>
	      <th>Direction</th>
	      <th>Called</th>
	      <th>Type</th>
	      <th>Account</th>
	      <th>State</th>
	      <th>Comments</th>
              <th>Action</th>
	    <tr>
	  </theader>
	  <tbody>
	    <%
	       mediatedcalls.forEach(function(mc, index){
	       if(mc.valid){
	       %>
	    <tr class="success">
	      <% }else{ %>
	    <tr class="danger">
	      <% } %>
              <form action="/mediation_update/<%= perPage %>/<%= numPage %>/<%= mc._id %>/<%= sdate %>/<%= edate %>" method="post">
	        <th><%= index+1 %></th>
	        <th><%=
                       mc.call_date
                       .toISOString()
                       .replace(/T/, ' ')
                       .replace(/\..+/, '')
                       %></th>
	        <th><%= mc.length %></th>
	        <th><%= mc.calling_num %></th>
	        <th><%= mc.direction %></th>
	        <th><%= mc.called_num %></th>
	        <th><input type="text" name="calltype" value="<%= mc.calltype %>"></th>
	        <th><input type="text" name="accountid" value="<%= mc.account_id %>"></th>
	        <th><input type="text" name="valid" value="<%= mc.valid %>"></th>
	        <th><input type="text" name="note" value="<%= mc.note %>"></th>
                <th><input type="submit" value="Update"></th>
                </form>
	    </tr>
	    
	    <% }); %>
	  </tbody>
	</table>
	
	<nav>
	  <ul class="pagination">
	    <li>
	      <a href="#" aria-label="Previous">
		<span aria-hidden="true">&laquo;</span>
	      </a>
	    </li>
	    <li><a href="#">1</a></li>
	    <li><a href="#">2</a></li>
	    <li><a href="#">3</a></li>
	    <li><a href="#">4</a></li>
	    <li><a href="#">5</a></li>
	  <li>
	    <a href="#" aria-label="Next">
	      <span aria-hidden="true">&raquo;</span>
	    </a>
	  </li>
	  </ul>
	</nav>
      </div><!-- end of well div -->
      
    </div>
  </div>
</div>
